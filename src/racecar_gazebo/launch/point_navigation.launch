<?xml version="1.0"?>
<launch>
  <!-- 使用仿真时间 -->
  <param name="use_sim_time" value="true"/>

  <!-- 1. 启动 Gazebo 并加载世界 -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"
         value="$(find racecar_gazebo)/worlds/racecar_runway.world"/>
    <arg name="paused" value="false"/>
  </include>

  <!-- 2. 加载 URDF 到参数服务器 -->
  <param name="robot_description"
         command="$(find xacro)/xacro $(find racecar_description)/urdf/racecar.urdf.xacro"/>

  <!-- 3. 生成小车（关键：-wait） -->
  <node name="spawn_racecar"
        pkg="gazebo_ros"
        type="spawn_model"
        output="screen"
        args="-urdf -param robot_description -model racecar -wait racecar"/>

  <!-- 4. 加载控制器参数 -->
  <rosparam file="$(find racecar_gazebo)/config/racecar_control.yaml"
            command="load"/>

  <!-- 4.5. 启动gazebo_ros_control插件 -->
  <node name="gazebo_ros_control"
        pkg="controller_manager"
        type="spawner"
        output="screen"
        args="gazebo_ros_control"/>

  <!-- 5. 启动控制器（关键：namespace） -->
  <node name="controller_spawner"
        pkg="controller_manager"
        type="spawner"
        ns="/racecar"
        output="screen"
        args="
          left_front_wheel_velocity_controller
          right_front_wheel_velocity_controller
          left_rear_wheel_velocity_controller
          right_rear_wheel_velocity_controller
          left_steering_hinge_position_controller
          right_steering_hinge_position_controller
        "/>

  <!-- 5.5. 启动驱动控制器 -->
  <node name="drive_controller"
        pkg="racecar_gazebo"
        type="drive_controller.py"
        output="screen">
    <remap from="cmd_vel" to="/racecar/drive_cmd"/>
  </node>

  <!-- 6. 启动机器人状态发布者 -->
  <node name="robot_state_publisher"
        pkg="robot_state_publisher"
        type="robot_state_publisher"
        respawn="false"
        output="screen">
    <remap from="joint_states" to="/racecar/joint_states"/>
  </node>

  <!-- 7. 启动里程计发布者 -->
  <node name="racecar_odometry"
        pkg="racecar_gazebo"
        type="odometry.py"
        output="screen">
    <remap from="odom" to="/racecar/odom"/>
  </node>

  <!-- 8. 启动定点运动节点 -->
  <node name="point_navigation_node"
        pkg="racecar_gazebo"
        type="point_navigation.py"
        output="screen">
    <remap from="cmd_vel" to="/racecar/drive_cmd"/>
    <remap from="odom" to="/racecar/odom"/>
    <remap from="scan" to="/scan"/>

    <!-- 默认参数 -->
    <param name="goal_tolerance" value="0.2"/>
    <param name="max_linear_speed" value="1.0"/>
    <param name="max_angular_speed" value="1.0"/>
    <param name="obstacle_threshold" value="0.5"/>
    <param name="goal_x" value="2.0"/>
    <param name="goal_y" value="2.0"/>
  </node>

  <!-- 9. 启动RViz可视化 -->
  <node name="rviz"
        pkg="rviz"
        type="rviz"
        args="-d $(find racecar_gazebo)/config/racecar.rviz"
        respawn="false"
        output="screen"/>
</launch>